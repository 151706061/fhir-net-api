<Project Sdk="Microsoft.NET.Sdk" ToolsVersion="15.0">
  <PropertyGroup>
    <TargetFrameworks>net40;net45;netstandard1.1;netstandard1.3</TargetFrameworks>
  </PropertyGroup>

  <Import Project="..\platforms.props" />
  <Import Project="..\fhir-net-api.props" />
  <Import Project="..\fhir-net-api.targets" />

  <PropertyGroup>
    <Version>$(SupportApiVersion)</Version>
    <PackageId>Hl7.Fhir.Support</PackageId>
    <Title>HL7 FHIR support library</Title>
    <Summary>Common interfaces and classes used by all FHIR .NET assemblies</Summary>
    <Description>Common interfaces and classes used by all FHIR .NET assemblies</Description>
    <PackageTags>HL7;FHIR;Elements;Utility</PackageTags>
    <AssemblyName>Hl7.Fhir.Support</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="ElementModel\ElementNavigatorExtensions - with INavigator.cs" />
    <Compile Remove="ElementModel\PathNavigator.cs" />
    <Compile Remove="Serialization\IModelMetadataProvider.cs" />
    <Compile Remove="Serialization\INavigatingParser.cs" />
    <Compile Remove="Serialization\JsonDomFhirNavigator.cs" />
    <Compile Remove="Serialization\JsonDomFhirNavigatorFactory.cs" />
    <Compile Remove="Serialization\JsonDomFhirNavigatorNode.cs" />
    <Compile Remove="Serialization\JsonSerializationDetails.cs" />
    <Compile Remove="Serialization\NavigatorXmlWriter.cs" />
    <Compile Remove="Serialization\SerializationInfoCache.cs" />
    <Compile Remove="Serialization\SourceComments.cs" />
    <Compile Remove="Serialization\XmlDomFhirNavigator - Archive.cs" />
    <Compile Remove="Serialization\XmlDomFhirNavigator.cs" />
    <Compile Remove="Serialization\XmlDomFhirNavigatorFactory.cs" />
    <Compile Remove="Serialization\XmlDomFhirParser.cs" />
    <Compile Remove="Serialization\XmlSerializationDetails.cs" />
    <Compile Remove="Utility\PipelineComponent.cs" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="ISchema design.txt" />
    <None Remove="ISchema resource examples.txt" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
    <PackageReference Include="System.ValueTuple" Version="4.5.0" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net45' ">
    <Reference Include="System.Xml" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System" />
    <Reference Include="System.IO.Compression" />
  </ItemGroup>
</Project>